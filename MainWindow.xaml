<Window x:Class="WPF_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_App"
        mc:Ignorable="d"
        Title="Sports NX" Height="450" Width="800">
    <StackPanel>
        <Label FontWeight="Bold">Pizza Topings</Label>
        <CheckBox Name="Topings" IsThreeState="True" Checked="Topings_Checked" Unchecked="Topings_Checked">Add All</CheckBox>
        <StackPanel Margin="7">
            <CheckBox Name="Salami" Checked="One_Toping_Checked" Unchecked="One_Toping_Checked">
                <TextBlock>
                    Salami <Run Foreground="Red" FontWeight="Bold">spicy</Run>
                </TextBlock>
            </CheckBox>
            <CheckBox Name="Mushrooms" Checked="One_Toping_Checked" Unchecked="One_Toping_Checked">
                Mushrooms
            </CheckBox>
            <CheckBox Name="Mozzarella" Checked="One_Toping_Checked" Unchecked="One_Toping_Checked">
                Mozzarella
            </CheckBox>
        </StackPanel>
    </StackPanel>
</Window>
